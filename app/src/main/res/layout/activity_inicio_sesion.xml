<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".INICIO_SESION">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/foto_parkingss">
    </ImageView>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">
    </View>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="118dp"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="120dp"
        android:layout_weight="1"
        android:background="@drawable/imagen_ciruclar"
        android:visibility="visible"
        tools:srcCompat="@drawable/parking" />

    <TextView
        android:id="@+id/ISTextAparcafacil"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="20sp"
        android:text="APARCAFACIL PARKING"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="463dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="84dp"
        android:background="#FFFFFF"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="75sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ISTextUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario:" />

            <EditText
                android:id="@+id/ISEditTextUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="example56"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ISTextContraseña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña:" />

            <EditText
                android:id="@+id/ISEditTextContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="·················"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">

            <Space
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/ISBtnIniciarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="25sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ISTextNoRegistrado"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:text="No te has registrado?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ISTextRegistrate"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:text="Registrate"
                    android:textColor="#0171FA" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginRight="42sp"
                    android:background="#0171FA"
                    android:backgroundTint="#0171FA" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ISTextSobreNosotros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About us"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>
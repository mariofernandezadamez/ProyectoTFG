<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F96E1"
    android:orientation="vertical"
    tools:context=".INICIO_SESION">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginBottom="35sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            tools:srcCompat="@drawable/parking" />

        <TextView
            android:id="@+id/ISTextAparcafacil"
            android:layout_width="289dp"
            android:layout_height="58dp"
            android:layout_marginTop="15sp"
            android:text="APARCAFACIL PARKING"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="323dp"
        android:layout_height="416dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="#FFFFFF"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ISTextIniciodesesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="INICIO DE SESIÓN"
            android:textAlignment="center"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="80sp"
            android:layout_marginRight="80sp"
            android:layout_marginBottom="20sp"
            android:background="#A9A5A5"
            android:backgroundTint="#CCCCCC"
            android:hapticFeedbackEnabled="false" />

        <LinearLayout
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ISTextUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario:" />

            <EditText
                android:id="@+id/ISEditTextUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="example56"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ISTextContraseña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña:" />

            <EditText
                android:id="@+id/ISEditTextContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="·················"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">

            <Space
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/ISBtnIniciarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="25sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ISTextNoRegistrado"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:text="No te has registrado?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ISTextRegistrate"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:text="Registrate"
                    android:textColor="#0171FA" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginRight="42sp"
                    android:background="#0171FA"
                    android:backgroundTint="#0171FA" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ISTextSobreNosotros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About us"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>